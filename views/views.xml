<odoo>
    <data>
        <!-- explicit list view definition -->
        <record id="weakest_link_form" model="ir.ui.view">
            <field name="name">Weakest Link</field>
            <field name="model">weakest.link</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Bank" type="object" name="bank" class="btn btn-info"
                                attrs="{'invisible': [('objective', '=', True)]}"/>
                        <button string="Correct" type="object" name="correct" class="btn btn-success"
                                attrs="{'invisible': [('objective', '=', True)]}"/>
                        <button string="Incorrect" type="object" name="incorrect" class="btn btn-danger"
                                attrs="{'invisible': [('objective', '=', True)]}"/>
                    </header>
                    <sheet>
                        <widget name="web_ribbon" title="Won" attrs="{'invisible': [('objective', '!=', True)]}"/>

                        <div class="oe_title">
                            <h1>
                                <field name="name" required="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="objective" invisible="1"/>
                                <field name="global_value" readonly="1"/>
                            </group>
                            <group>
                                <group>
                                    <field name="current_line_id" invisible="1"/>
                                    <field name="currency_id" readonly="1"/>
                                </group>
                            </group>
                        </group>
                        <field name="question_ids">
                            <tree>
                                <field name="topic_id"/>
                                <field name="question"/>
                                <field name="answer"/>
                                <field name="is_right"/>
                            </tree>
                        </field>
                        <field name="line_ids">
                            <tree>
                                <field name="sequence"/>
                                <field name="value"/>
                                <field name="sums"/>
                            </tree>
                            <form>
                                <group>
                                    <group>
                                        <field name="value"/>
                                    </group>
                                </group>
                            </form>
                        </field>

                    </sheet>
                </form>
            </field>
        </record>

        <!-- actions opening views on models -->

        <record model="ir.actions.act_window" id="weakest_link.session_action">
            <field name="name">Weakest link window</field>
            <field name="res_model">weakest.link.session</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="weakest_link.question_action">
            <field name="name">Weakest link question window</field>
            <field name="res_model">weakest.link.question</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.actions.act_window" id="weakest_link.action_window">
            <field name="name">Weakest link window</field>
            <field name="res_model">weakest.link</field>
            <field name="view_mode">tree,form</field>
        </record>


        <!-- Top menu item -->

        <menuitem name="weakest_link" id="weakest_link.menu_root"/>


        <menuitem name="List" id="weakest_link.menu_1_list" parent="weakest_link.menu_root"
                  action="weakest_link.action_window"/>
        <menuitem name="Session" id="weakest_link.menu_2_list" parent="weakest_link.menu_root"
                  action="weakest_link.session_action" sequence="0"/>
        <menuitem name="Questions" id="weakest_link.menu_3_list" parent="weakest_link.menu_root"
                  action="weakest_link.question_action" sequence="3"/>

    </data>
</odoo>